package entites;

public class ListaDuplamenteEncadeada<T>{
	
	private int tamanho;
	private No<T> header, inicio, fim;
	
	
	
	public ListaDuplamenteEncadeada() {
		this.fim=null;
		this.inicio = null;
     	this.tamanho = 0;
     	this.header = new No<T>(null);
	}

	public ListaDuplamenteEncadeada(No<T> inicio) {
		super();
		this.fim=null;
		this.inicio = null;
     	this.tamanho = 0;
     	this.header = null;
	}
	
	
	
	public void add(T elemento, int position) {
		if (position < 0 || position >= tamanho) {
			throw new IllegalArgumentException("Posição inválida.");
		}

		else if (this.header.getProximo() == null && position > 0) {
			return;
		}
		else {
			int cont = 0;
			Iterador it = new Iterador(this.header.getProximo());
			No<T> element = new No<T>(elemento);	
			
			while(it.hasNext()) {
				if (position != cont) {
					it.next(); 
					cont+=1;
 				}
				else {
					break;
				}
			}
			No<T> elementoList = it.getAtual();
			element.setProximo(elementoList);
			element.setAnterior((T) it.getAtual().getElemento());
			elementoList.setAnterior(element.getElemento());
			
			
		}
	}
	
	public void addInicio(T elemento) {
	    if (elemento instanceof ListaDuplamenteEncadeada) {
	        throw new IllegalArgumentException("Não é possível inserir um objeto ListaEncadeada em outro objeto ListaEncadeada");
	    }

	    No<T> element = new No<T>(elemento);

	    if (tamanho == 0) {

	    	
	    	header.setAnterior((T) element);
	        header.setProximo(element);
	        
	        this.tamanho += 1;
	        
	    } else {
	    	element.setProximo(header.getProximo());
	    	header.getProximo().setAnterior(element.getElemento());	    		    	
	    	element.setAnterior((T) header);	    
	    	header.setProximo(element);
	        this.tamanho += 1;
	    }
	}
	
	public void addFim(T elemento) { 
		No<T> element = new No<T>(elemento);	
		
		if (tamanho == 0) {
			header.setAnterior((T) element);
	        header.setProximo(element);
			this.tamanho += 1;
		}
		else {
			Iterador it = new Iterador(this.header.getProximo());	
			
			while(it.hasNext()) {
				if (it.getAtual().getProximo() != null) {
					it.next();                  
                } else {
                    break;
                }	
			}	
			No<T> elementList = it.getAtual();
			element.setProximo(header);
			header.setAnterior((T) element);
			elementList.setProximo(element);
			
			element.setAnterior(elementList.getElemento());
			tamanho += 1;
			
		}
	}
	
	public boolean existeDado() {
		if (tamanho == 0) {
			return false;
		}
		else {return true;}
	}

    public T Recupera(int posicao) {
        
        if (this.tamanho == 0) {
            
            System.out.println("A lista está vazia!!");
            return null;
            
        } else if (posicao < 0 || posicao >= this.tamanho) {
            
            System.out.println("A Posição " + posicao + " é Inválida!");
            return null;
            
        } else {
            
            Iterador it = new Iterador(this.header.getProximo());
            int i = 0;
            while (it.hasNext()) {
                if (i != posicao) {
                    it.next();
                    i++;
                } else {
                    break;
                }
            }
            
            return (T) it.getAtual().getElemento();
        }
    }
	
	 public void removeInicio() {
		 	
	        if (this.tamanho == 0) {
	            System.out.println("A lista está vazia!");
	            
	        } else if (header.getProximo() == header.getAnterior()) {
	            
	            this.clear();
	            this.tamanho -= 1;
	            
	        } else {
	            
	            header.setProximo(header.getProximo().getProximo()); // é igual inicio = inicio.getProximo();
	            
	            header.getProximo().setAnterior(null);
	            this.tamanho -= 1;
	        }
	    }
	 
	//não funciona
	public void removeFim() {
		if (this.tamanho == 0) {
            System.out.println("A lista está vazia!");
                 
        } else {
            T ultimo = this.Recupera(tamanho);
            
        }
	}
	public void clear() {
		 this.inicio = null;
	     this.fim = null;
	     this.tamanho = 0;
	     this.header = null;
	}

	@Override
	public String toString() {
		return "ListaEncadeada [inicio=" +header+ "]";
	}		
	
	
}
